{% comment %} SEARCH INPUT {% endcomment %}
<div class="boost-pfs-filter-collection-header-wrapper boost-pfs-search-form-wrapper">
  <div class="boost-pfs-search-container boost-pfs-container-default-{{ layout_type }}">
    <h1 class="boost-pfs-search-result-header"></h1>
    <form class="main-search-form" action="{{ routes.search_url }}" method="get" role="search">
      <div class="search-input">
        <button type="submit" class="boost-pfs-search-btn" aria-label="Submit">{%- render 'icon' with 'search' -%}</button>
        <input class="boost-pfs-search-input" type="search" name="q" value="{{ search.terms | escape }}">
        <button type="button" class="boost-pfs-search-form-btn-clear" aria-label="Reset">
          <span class="sr-only">{{ 'search.general.clear' | t }}</span>
          {%- render 'icon' with 'close-small' -%}
        </button>
      </div>
    </form>
  </div>
</div>
{% comment %} END SEARCH INPUT {% endcomment %}

{% comment %} SEARCH RESULT TOOLBAR {% endcomment %}
<div class="boost-pfs-container-default-{{ layout_type }}" hidden>
  <div class="boost-pfs-search-result-toolbar">
    <div class="boost-pfs-filter-default-toolbar-inner">
      <div class="boost-pfs-search-result-item">
        <ul class="boost-pfs-search-result-panel-controls">
          <li>{% render 'boost-pfs-filter-skeleton', width: 2 %}</li>
          <li>{% render 'boost-pfs-filter-skeleton', width: 2 %}</li>
          <li>{% render 'boost-pfs-filter-skeleton', width: 1 %}</li>
        </ul>
      </div>
      <div class="boost-pfs-search-result-item">
        <span class="filters-toolbar__product-count boost-pfs-search-total-result">
          {% render 'boost-pfs-filter-skeleton', width: 2 %}
        </span>
      </div>
    </div>
  </div>
</div>
{% comment %} END SEARCH RESULT TOOLBAR {% endcomment %}